<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :image, "Profile Pic" %>
      </div>
      <div class="col-sm-8">
        <%= f.file_field :image %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :username %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :email %>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :password %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>
    </div>
    <% if logged_in? && current_user.has_role?(:admin)%>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :role %>
      </div>
      <div class="col-sm-8">
        <%= f.collection_check_boxes :role_ids, Role.all, :id, :name%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :active %>
      </div>
      <div class="col-sm-8">
        <%= f.radio_button :active, true %>
        <%= f.label :active, 'True', :value => true %>
        <%= f.radio_button :active, false %>
        <%= f.label :active, 'False', :value => false %>
      </div>
    </div>
    <% end %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit(@user.new_record?  ? "Sign up" : "Update account", class: 'btn btn-success btn-large') %>
      </div>
    </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-2">
      [ <%= link_to 'Cancel request and Return to Tweets Listing', tweets_path %> ]
    </div>
  </div>
</div>
