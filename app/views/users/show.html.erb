<h1 align="center">Welcome to <%= @user.username %>'s page</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <center><%= gravatar_for @user, size: 150%></center>
  </div>
</div>
<h4 align="center"><%= @user.username %>'s articles</h4>
<div>
  <% if @current_user && @current_user.following?(@user) %>
    <center><%= button_to "following", {action: 'unfollow', id: @user.id}, method: 'post', class: 'btn btn-danger' %></center>
  <% elsif @current_user != @user && @current_user%>
    <center><%= button_to "follow", follow_user_path(@user), class: 'btn btn-success' %></center>
  <% end %>
</div>
<%= render 'shared/article', obj: @user_articles %>
<div align="center">
  <%= raw pagy_bootstrap_nav(@pagy) if @user.articles.count > 10%>
</div>
