<div class="row">
  <% comments.each do |comment| %>
    <% if comment.body %>
      <div class="col-sm-10">
        <%= simple_format(comment.body) %>
      </div>
      <div class="col-sm-2">
          <% if logged_in? && current_user == comment.user %>
            <%= link_to '', edit_article_comment_path( comment.article_id,comment.id ), class: 'btn btn-info btn-xs glyphicon glyphicon-edit' %>
            <%= link_to "", article_comment_path(comment.article_id ,comment.id), method: :delete, class: 'btn btn-danger glyphicon glyphicon-trash btn-xs' %>
          <% end %>
        <br/>
      </div>
    <% end %>
  <% end %>
</div>
