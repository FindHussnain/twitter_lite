<div data-controller="confirmation">
  <% if current_user.admin? %>
  <center><%= link_to "Create Subscription", new_subscription_path, class: 'btn btn-xs btn-primary' %></center>
  <% end %>
  <% @subscriptions.each do |subscription| %>
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
        <div class="well ">
          <h4>Name: <%= subscription.name %></h4>
          <p>Description: <%= subscription.description %></p>
          <p>Price: <%= subscription.price %></p>
          <p>Number of tweets: <%= subscription.number_of_tweets %></p>
          <% if logged_in? && current_user.admin? %>
            <div style="float: left; margin-right: 4px; width: auto;">
              <%= button_to "Destroy", subscription_path(subscription),method: :delete, data: { action: 'click->confirmation#confirm' },class: 'btn btn-xs btn-danger' %>
            </div>
            <div style="float: left; margin-right: 4px; width: auto;">
              <%= link_to "Edit", edit_subscription_path(subscription), class: 'btn btn-xs btn-success ' %>
            </div>
          <% end %>
          <%= link_to "Show", subscription_path(subscription), class: 'btn btn-xs btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
