<% vote_text = current_user&.voted_for?(article) ? raw("<i class=\"btn btn-primary  btn-xs \"> #{pluralize(article.get_upvotes.size, 'Like')}</i>") : raw("<i class=\"btn btn-secondary glyphicon glyphicon-thumbs-up btn-xs shadow-none\"> Like</i>") %>

<%= button_to vote_text, like_article_path(article), method: :put, remote: :true %>
