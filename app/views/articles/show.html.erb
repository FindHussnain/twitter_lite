<div data-controller="hello">
<h2 align="center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @article.user %>
    <ul class="listing">
      <div class="row" align="center">
        <div class="col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
          <li class="article-title"><%= link_to @article.user.username, user_path(@article.user) %></li>
          <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= @article.description %>
  <%== @article.tag_list.map {|t| link_to t, tag_path(t)}.join(' ') %>
  <div class="row article-actions">
    <div class="col-lg-6" >
      <!--<div id="like-count" style="float: left;">
        <%#= render 'articles/likes', article: @article %>
      </div>
    -->
      <div id="like-link" style="float: left;">
        <%= render 'articles/like_link', article: @article %>
      </div>
    </div>
    <div class="col-lg-6"  >
      <div style="float: right;">
        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
        <%= link_to "delete", article_path(@article), method: :delete, data: { confirm: "are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
        <%= link_to "Back", articles_path, class: "btn btn-xs btn-success" %>
      </div>
    </div>
  </div>
</div>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center description"><strong>Comments:</strong></h4>
  <%= render 'comments/form' if logged_in? %>
  <hr>
  <%= render 'comments/comments', comments: @comments %>
</div>

</div>
