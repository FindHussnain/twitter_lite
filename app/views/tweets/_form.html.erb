  <div class="row">
   <div class="col-xs-12">
    <%= form_for(@tweet, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
     <div class="control-label col-sm-2">
      <%= f.label :title %>
     </div>
     <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control", placeholder: "Title of tweet", autofocus: true %>
     </div>
    </div>
    <div class="form-group">
     <div class="control-label col-sm-2">
      <%= f.label :tag_list %>
     </div>
     <div class="col-sm-8">
      <%= f.text_field :tag_list, class: "form-control", placeholder: "Enter Tags (separated by commas)", autofocus: true %>
     </div>
    </div>
    <div class="form-group">
     <div class="control-label col-sm-2">
      <%= f.label :description %>
     </div>
     <div class="col-sm-8">
      <%= f.rich_text_area :description, rows: 10, class: "form-control", placeholder: "Body of tweet" %>
     </div>
    </div>
    <% if current_user.admin? %>
      <div class="form-group">
       <div class="control-label col-sm-2">
        <%= f.label :active %>
       </div>
       <div class="col-sm-8">
         <%= f.radio_button :active, true %>
         <%= f.label :active, 'True', :value => true %>
         <%= f.radio_button :active, false %>
         <%= f.label :active, 'False', :value => false %>
      </div>
    <% end %>
    <div class="form-group">
     <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-success btn-large' %> |
      <%= link_to 'Back', tweets_path , class: 'btn btn-warning btn-large'%>
     </div>
    </div>
  <% end %>
   </div>
  </div>
